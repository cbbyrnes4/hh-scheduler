<% @page_title = "Delete Appointment" %>

<%= link_to("<< Back to Appointment", appointment_path(@appointment.id), :class => 'back-link') %>

<div class="subjects delete">
  <h2>Delete Subject</h2>

  <%= form_for(:subject, :url => appointment_path(@appointment.id), :method => 'delete') do |f| %>

    <p class="highlight">Are you sure you want to cancel appointment: <%= @appointment.id %> for <%= @appointment.name %>?</p>

    <br />

    <p>You may want change the status to 'inactive' if the appointment has been completed.</p>

    <div class="form-buttons">
      <%= submit_tag("Cancel Appointment", :class => "btn btn-md btn-danger form-buttons") %>
    </div>

  <% end %>
</div>