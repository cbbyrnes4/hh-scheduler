<!DOCTYPE html>
<html>
	<head>
		<title>Hired Hands Scheduling Application</title>
			<%= stylesheet_link_tag('application', :media => 'all') %>
		  <%= javascript_include_tag('application', 'data-turbolinks-track' => true) %>
		  <%= csrf_meta_tags %>
	  	<!--[if lt IE 9]>
	      <script src="//cdnjs.cloudflare.com/ajax/libs/html5shiv/r29/html5.min.js"></script>
	    <![endif]-->
	</head>
	
	<body>
		<div class="navbar navbar-fixed-top"> 
			<div class="container-fluid">
				<div class="navbar-header">
					<p class="navbar-brand">Hired Hands Scheduler</p>
					<button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
						<span class="sr-only">Toggle navigation</span>
						<span class="icon-bar"></span>
						<span class="icon-bar"></span>
						<span class="icon-bar"></span>
					</button>
				</div>
				<div class="collapse navbar-collapse">
					<ul class="nav navbar-nav">
						<li class="<%= 'active' if current_page?(:controller => 'appointments') %>"><a href="/appointments">Appointments</a></li>
						<li class="<%= 'active' if current_page?(:controller => 'employees') %>"><a href="/employees">Employees</a></li>
					</ul>
					<ul class="nav navbar-nav navbar-right">
						<li><a href="/account">Account</a></li>
						<li><a href="/settings">Settings</a></li>
					</ul>
				</div>
			</div>
		</div>

		<div class="container">
			<div>
		  <% flash.each do |key, value| %>
		    <div class="<%= flash_class(key) %> fade in">
		      <a href="#" data-dismiss="alert" class="close">Ã—</a>
		      <%= value %>
		    </div>
		  <% end %>
			</div>
			<!-- Begin page content -->
			<%= yield %>
			<!-- End page content -->
		</div>
		    
		<footer class="footer">
	    <div class="container">
	      <p class="text-muted">&copy; <%= Time.now.year %> Chaz Byrnes | <a target="_blank" href="http://www.studentagencies.com/">studentagencies.com</a></p>
	    </div>
	  </footer>
	</body>
</html>